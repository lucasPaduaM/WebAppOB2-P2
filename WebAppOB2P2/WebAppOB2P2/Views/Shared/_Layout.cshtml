@using Social.NetWork.Dominio
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppOB2P2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                Social.NetWork
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @if (!string.IsNullOrEmpty(Context.Session.GetString("usuarioLogueado")) && Sistema.Instancia.EsMiembro(Context.Session.GetString("usuarioLogueado")))
                        {
                            <li class="nav-item">
                                <a href="../Index/Inicio" class="nav-link text-dark" role="button" aria-pressed="true">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Index" asp-action="VerPublicaciones">Ver Publicaciones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PublicarPost" asp-action="CrearPost">Subir Publicacion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Invitaciones" asp-action="EnviarInvitacion">Enviar invitaciones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Invitaciones" asp-action="VerInvitacion">Ver Solicitidues de amistad</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Invitaciones" asp-action="VerAmigos">Amigos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar Sesion</a>
                            </li>
                        }
                        else if (!string.IsNullOrEmpty(Context.Session.GetString("usuarioLogueado")))
                        {
                            <li class="nav-item">
                                <a href="../Index/Inicio" class="nav-link text-dark" role="button" aria-pressed="true">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a href="../Index/VerMiembrosAdmin" class="nav-link text-dark" role="button" aria-pressed="true">Listar miembros</a>
                            </li>
                            <li class="nav-item">
                                <a href="../Index/VerPublicacionesAdmin" class="nav-link text-dark" role="button" aria-pressed="true">Ver publicaciones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar Sesion</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebAppOB2P2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>